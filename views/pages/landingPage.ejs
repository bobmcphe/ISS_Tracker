<!DOCTYPE html>
<head>
    <title>ISS Tracker</title>
    <link rel="stylesheet" type="text/css" href="styles/styling.css">
</head>
<body id = "LP">
    <header>
      <h1 id = "LPh1">Track the International Space Station (ISS)</h1 >
    </header>
    <main class = "pic-container">
      <video autoplay muted loop id="iss-video">
        <source src="/icons-pretty-pics/stop-33-sec-parts.mp4" type="video/mp4">
      </video>
      
    <div class = "form-container">
      <form method = "post" action = "/basic">
        <input name = "name" placeholder = "Enter Name"  type = "text" required>
        <input name = "city" placeholder = "Enter City"  type = "text" required>
        
        <input type = "image" class = "icon active" id = "lp-button" src = "/icons-pretty-pics/icon-small-ISS.png">
      </form>
    </div>

  <div id = "anniversary">
    <h1 id = "LPh2"> The 20th Anniversary of the First ISS Crew Arrival</h1>
    <div id= "countdown">
    </div>
  </div>


    <script>
      function countdownTimer() {
        const difference = +new Date("2020-11-03") - +new Date();
        let remaining = "Time's up!";

        if (difference > 0) {
          const parts = {
            days: Math.floor(difference / (1000 * 60 * 60 * 24)),
            hours: Math.floor((difference / (1000 * 60 * 60)) % 24),
            mins: Math.floor((difference / 1000 / 60) % 60),
            secs: Math.floor((difference / 1000) % 60)
          };

          remaining = Object.keys(parts)
            .map(part => {
              if (!parts[part]) return;
              return `${parts[part]} ${part}`;
            })
            .join(" ");
        }

        document.getElementById("countdown").innerHTML = remaining;
      }

      countdownTimer();
      setInterval(countdownTimer, 1000);
    </script>
    </main>
</body>
</html>